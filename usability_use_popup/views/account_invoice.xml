<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_invoice_supplier_form_popup" model="ir.ui.view">
            <field name="name">account.invoice.supplier.form.popup</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_supplier_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree" position="attributes" >
                    <attribute name="editable"></attribute>
                </xpath>
            </field>
        </record>
        <record id="view_invoice_form_popup" model="ir.ui.view">
            <field name="name">account.invoice.form.popup</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']/tree" position="attributes" >
                    <attribute name="editable"></attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
